{
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": ["DOM", "ES5", "ES6"],
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@logger": ["./logger/index.ts"]
    }
  },
  "include": ["src/**/*", "src/**/[.*].tsx", "scripts", "logger", "functions"],
  "exclude": [
    ".github",
    ".husky",
    ".netlify",
    ".next",
    ".storybook",
    ".vscode",
    "content",
    "dist",
    "node_modules",
    "public"
  ]
}
