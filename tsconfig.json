{
  "extends": "./tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "lib": ["DOM", "ES5", "ES6"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@logger": ["./logger/index.ts"]
    }
  },
  "include": ["src/**/*", "src/**/[.*].tsx", "scripts", "logger"],
  "exclude": ["node_modules", ".cache", "public", ".next", "dist", "functions"]
}
